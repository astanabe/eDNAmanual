  author = {Ushio, Masayuki and Murakami, Hiroaki and Masuda, Reiji and Sado, Tetsuya and Miya, Masaki and Sakurai, Sho and Yamanaka, Hiroki and Minamoto, Toshifumi and Kondoh, Michio},
