@article{Ushio2022efficientearlypoolingprotocol,
  title = {An Efficient Early-Pooling Protocol for Environmental {{DNA}} Metabarcoding},
  author = {Ushio, Masayuki and Furukawa, Saori and Murakami, Hiroaki and Masuda, Reiji and Nagano, Atsushi J.},
  year = {2022},
  journal = {Environmental DNA},
